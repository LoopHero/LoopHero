<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" prefHeight="239.0" prefWidth="324.0" spacing="20.0" stylesheets="@background_images/main_menu_background.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="mainMenu" alignment="CENTER" prefHeight="25.0" prefWidth="270.0" text="Main Menu" textFill="#ffbf00">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font></Label>
      <!-- clicking button should start/resume the game -->
      <Button fx:id="startGameButton" onAction="#switchToGame" onMouseEntered="#display" onMouseExited="#undisplay" opacity="0.85" prefHeight="31.0" prefWidth="119.0" text="Start Game">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font></Button>
      <Button fx:id="loadGameButton" onAction="#loadToGame" onMouseEntered="#display" onMouseExited="#undisplay" opacity="0.85" prefHeight="31.0" prefWidth="119.0" text="Load Game">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font></Button>
      <!-- <Button fx:id="startGameButton1" onAction="#switchToGameBerserker" onMouseEntered="#displayBerserker" onMouseExited="#undisplay" prefHeight="27.0" prefWidth="200.0" text="Start Game (Berserker)" /> -->
      <!-- <Button fx:id="startGameButton2" onAction="#switchToGameSurvival" onMouseEntered="#displaySurvival" onMouseExited="#undisplay" prefHeight="27.0" prefWidth="200.0" text="Start Game (Survival)" /> -->
      <Button fx:id="restartGameButton" onAction="#reStartGame" opacity="0.85" text="Good Luck!">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
